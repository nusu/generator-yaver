@import 'triangle-mixin'

// media query
tablet = "(min-width: 768px)"
medium = "(min-width: 992px)"
large = "(min-width: 1200px)"
retina  = "(-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)"

bp(paramaters)
  @media paramaters
    {block}

font-url(file)
  return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = '400')
  @font-face
    font-family family
    src url(font-url(file + '.eot'))
    src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
        url(font-url(file + '.woff')) format('woff'), 
        url(font-url(file + '.ttf')) format('truetype'), 
        url(font-url(file + '.svg#'+ family)) format('svg')
    font-weight weight
    font-style normal
  if hack-chrome-windows
    @media screen and (-webkit-min-device-pixel-ratio:0)
      @font-face
        font-family family
        src url(font-url(file + '.svg#'+ family)) format('svg')

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n
  
background-size(n)
  -webkit-background-size: n
  -moz-background-size: n
  -o-background-size: n
  background-size: n

clearfix()
  +ie(7, true)
    zoom 1
  &:before
  &:after
    content ""
    display table
  &:after
    clear both

animation(ani)
  -webkit-animation: ani
  -moz-animation: ani
  -ms-animation: ani
  -o-animation: ani
  animation: ani

animation-delay(ani)
  -webkit-animation-delay: ani
  -moz-animation-delay: ani
  -ms-animation-delay: ani
  -o-animation-delay: ani
  animation-delay: ani

animation-name(ani)
  -webkit-animation-name: ani
  -moz-animation-name: ani
  -ms-animation-name: ani
  -o-animation-name: ani
  animation-name: ani
  
animation-play-state(ani)
  -webkit-animation-play-state: ani
  -moz-animation-play-state: ani
  -ms-animation-play-state: ani
  -o-animation-play-state: ani
  animation-play-state: ani

animation-timing-function(ani)
  -webkit-animation-timing-function: ani
  -moz-animation-timing-function: ani
  -ms-animation-timing-function: ani
  -o-animation-timing-function: ani
  animation-timing-function: ani

transform(trans)  
  -webkit-transform: trans
  -ms-transform: trans
  -moz-transform: trans
  -o-transform: trans
  transform: trans

transform-origin(trans)
  -webkit-transform-origin: trans
  -ms-transform-origin: trans
  -o-transform-origin: trans
  -moz-transform-origin: trans
  transform-origin: trans
  
transition(vals)
  -webkit-transition: vals
  -ms-transition: vals 
  -o-transition: vals 
  -moz-transition: vals 
  transition: vals 
  
transition-property(vals)
  -webkit-transition-property: vals
  -ms-transition-property: vals 
  -o-transition-property: vals 
  -moz-transition-property: vals 
  transition-property: vals 

transition-duration(vals)
  -webkit-transition-duration: vals
  -ms-transition-duration: vals 
  -o-transition-duration: vals 
  -moz-transition-duration: vals 
  transition-duration: vals 

transition-timing-function(vals)
  -webkit-transition-timing-function: vals
  -ms-transition-timing-function: vals 
  -o-transition-timing-function: vals 
  -moz-transition-duration: vals 
  transition-duration: vals

filter(vals)
  -webkit-filter: vals
  -moz-filter: vals
  -o-filter: vals
  -ms-filter: vals
  filter: vals

user-select(vals)
  -webkit-user-select: vals
  -moz-user-select: vals
  -o-user-select: vals
  user-select: vals

placeholder()
  &::-webkit-input-placeholder
      {block}
  &:-moz-placeholder
      {block}
  &::-moz-placeholder
      {block}
  &:-ms-input-placeholder
      {block}

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval, deprecatedWebkitStartPoint = false, deprecatedWebkitEndPoint = false)
  background-color startColor
  if deprecatedWebkitStartPoint && deprecatedWebkitEndPoint
    background-image -webkit-gradient(linear, deprecatedWebkitStartPoint, deprecatedWebkitEndPoint, color-stop(startInterval, startColor), color-stop(endInterval, endColor))
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)

flex-center()
  justify-content: center
  -webkit-justify-content: center
  -webkit-align-items: center
  align-items: center

display-flex()
  display: flex
  display: -webkit-flex
  
a-block()
  display block
  width 100%
  height 100%

cut-long-text()
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

appearance(vals)
   -webkit-appearance: vals;
   -moz-appearance:    vals;
   appearance:         vals;


// SINE
$ease-in-sine      = cubic-bezier(0.470,  0.000, 0.745, 0.715)
$ease-out-sine     = cubic-bezier(0.390,  0.575, 0.565, 1.000)
$ease-in-out-sine  = cubic-bezier(0.445,  0.050, 0.550, 0.950)

// QUAD
$ease-in-quad      = cubic-bezier(0.550,  0.085, 0.680, 0.530)
$ease-out-quad     = cubic-bezier(0.250,  0.460, 0.450, 0.940)
$ease-in-out-quad  = cubic-bezier(0.455,  0.030, 0.515, 0.955)

// CUBIC
$ease-in-cubic     = cubic-bezier(0.550,  0.055, 0.675, 0.190)
$ease-out-cubic    = cubic-bezier(0.215,  0.610, 0.355, 1.000)
$ease-in-out-cubic = cubic-bezier(0.645,  0.045, 0.355, 1.000)

// QUART
$ease-in-quart     = cubic-bezier(0.895,  0.030, 0.685, 0.220)
$ease-out-quart    = cubic-bezier(0.165,  0.840, 0.440, 1.000)
$ease-in-out-quart = cubic-bezier(0.770,  0.000, 0.175, 1.000)

// QUINT
$ease-in-quint     = cubic-bezier(0.755,  0.050, 0.855, 0.060)
$ease-out-quint    = cubic-bezier(0.230,  1.000, 0.320, 1.000)
$ease-in-out-quint = cubic-bezier(0.860,  0.000, 0.070, 1.000)

// EXPO
$ease-in-expo      = cubic-bezier(0.950,  0.050, 0.795, 0.035)
$ease-out-expo     = cubic-bezier(0.190,  1.000, 0.220, 1.000)
$ease-in-out-expo  = cubic-bezier(1.000,  0.000, 0.000, 1.000)

// CIRC
$ease-in-circ      = cubic-bezier(0.600,  0.040, 0.980, 0.335)
$ease-out-circ     = cubic-bezier(0.075,  0.820, 0.165, 1.000)
$ease-in-out-circ  = cubic-bezier(0.785,  0.135, 0.150, 0.860)

// BACK
$ease-in-back      = cubic-bezier(0.600, -0.280, 0.735, 0.045)
$ease-out-back     = cubic-bezier(0.175,  0.885, 0.320, 1.275)
$ease-in-out-back  = cubic-bezier(0.680, -0.550, 0.265, 1.550)

//
// image properties
//

img(fileName, fileExtension, isRetina = false)
  fakePath = '../../assets/img/' + fileName + fileExtension
  realPath = '../img/' + fileName + fileExtension
  background-image url(realPath)
  width round(image-size(fakePath)[0])
  height round(image-size(fakePath)[1])
  if isRetina != false
    +bp(retina)
      fakePath = '../../assets/img/' + fileName + "@2" + fileExtension
      realPath = '../img/' + fileName + "@2" + fileExtension
      background-image url(realPath)
      background-size cover
      width round((image-size(fakePath)[0] / 2))
      height round((image-size(fakePath)[1] / 2))

r-img(fileName, fileExtension)
  fakePath = '../../assets/img/' + fileName + fileExtension
  realPath = '../img/' + fileName + fileExtension
  background-image url(realPath)
  background-size cover
  width (image-size(fakePath)[0] / 2)
  height (image-size(fakePath)[1] / 2)

img-center()
  top s("calc(50% - %s)", (@height/2))
  left s("calc(50% - %s)", (@width/2))

v-center()
  top s("calc(50% - %s)", (@height/2))

h-center()
  left s("calc(50% - %s)", (@width/2))

padding-fix()
  &:first-child
    padding-left 0
  &:last-child
    padding-right 0

margin-fix()
  &:first-child
    margin-left 0
  &:last-child
    margin-right 0

shadow-down(val = .9)
  opacity val
  width 100%
  height 100%
  display block
  position absolute
  bottom 0
  left 0
  z-index 3
  transition(700ms all $ease-out-sine)
  background -moz-linear-gradient(top,transparent 0,rgba(31,31,31,0) 31%,rgba(61,61,61,0.41) 61%,rgba(0,0,0,0.85) 100%)
  background -webkit-gradient(linear,left top,left bottom,color-stop(0%,transparent),color-stop(31%,rgba(31,31,31,0)),color-stop(61%,rgba(61,61,61,0.41)),color-stop(100%,rgba(0,0,0,0.85)))
  background -webkit-linear-gradient(top,transparent 0,rgba(31,31,31,0) 31%,rgba(61,61,61,0.41) 61%,rgba(0,0,0,0.85) 100%)
  background -o-linear-gradient(top,transparent 0,rgba(31,31,31,0) 31%,rgba(61,61,61,0.41) 61%,rgba(0,0,0,0.85) 100%)
  background -ms-linear-gradient(top,transparent 0,rgba(31,31,31,0) 31%,rgba(61,61,61,0.41) 61%,rgba(0,0,0,0.85) 100%)
  background linear-gradient(to bottom,transparent 0,rgba(31,31,31,0) 31%,rgba(61,61,61,0.41) 61%,rgba(0,0,0,0.85) 100%)
  filter unquote(" progid:DXImageTransform.Microsoft.gradient(startColorstr='#00000000',endColorstr='#f2000000',GradientType=0) ")

smooth-scroll()
  overflow-x scroll
  overflow-y hidden
  white-space nowrap
  -webkit-overflow-scrolling touch
  -ms-overflow-style -ms-autohiding-scrollbar