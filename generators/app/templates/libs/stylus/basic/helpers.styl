.no-padding
	padding 0

.no-right-padding
	padding-right 0

.no-left-padding
	padding-left 0

.sm-margin
	margin-top 28px
	margin-bottom 28px

.sm-top-margin
	margin-top 28px

.sm-bot-margin
	margin-bottom 28px

.md-margin
	margin-top 41px
	margin-bottom 41px

.md-top-margin
	margin-top 41px

.md-bot-margin
	margin-bottom 41px

.lg-margin
	margin-top 70px
	margin-bottom 70px

.lg-top-margin
	margin-top 70px

.lg-bot-margin
	margin-bottom 70px

.center-block
	display block
	margin-right auto
	margin-left auto

.text-center
	text-align center

.hidden-xs
	display none
	+bp(tablet)
		display initial

.hidden-sm
	+bp(tablet)
		display none
	+bp(medium)
		display initial

.hidden-md
	+bp(medium)
		display none
	+bp(large)
		display initial

.hidden-lg
	+bp(large)
		display none

.border-light
	width 100%
	height 1px
	margin 10px 0
	background alpha(#fff 5%)

.border-vertical-light
	width 1px
	height 100%
	margin 10px 0
	background alpha(#fff 50%)

.img-responsive
	max-width 100%
	height auto

.pull-left
	float left !important

.pull-right
	float right !important

.gauze
	opacity .5