coverh1FontColor 	= #fff

[class*='cover-content']
	position relative
	width 100%
	height 100%
	color coverh1FontColor
	background-size cover
	a
		color #fff
	&.center
		display-flex()
		flex-center()
		align-self center
	.top, .center, .bottom, .absolute-top
		position absolute
		&.text-center
			text-align center
	.top.text-center,
	.bottom.text-center
		width 100%
		padding 0 10%
	.absolute-top
		top 0
	.top
		top 13%
		padding 0 3%
	.center
		position relative
		align-self center
		float left
		top 50%
		left 50%
		transform translate(-50%, -50%)
	.bottom
		bottom 13%
		left 0
		padding 0 3%
	.left
		position relative
		float left
		top 50%
		transform translateY(-50%)
	.gutter-left
		left 30px
	.gutter-right
		right 30px


.inner-cover
	height 450px
	+bp(medium)
		height 570px
	background-position 50% 50%
	background-size cover
	&:before
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background -moz-linear-gradient(top, rgba(119,119,119,.4) 0%, rgba(119,119,119,.75) 100%) /* FF3.6-15 */
		background -webkit-linear-gradient(top, rgba(119,119,119,.4) 0%,rgba(119,119,119,.75) 100%) /* Chrome10-25,Safari5.1-6 */
		background linear-gradient(to bottom, rgba(119,119,119,.4) 0%,rgba(119,119,119,.75) 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	.container
		height 450px
		+bp(medium)
			height 570px
		position relative

			

.flex-content
	margin 15px 0
	&.marginly-flex
		margin-top 30px
	clearfix()
	+bp(medium)
		margin 0
	.image-side
		margin-bottom 30px
		+bp(medium)
			margin-bottom 0
		img
			@extend .img-responsive
	.content-side
		text-align left
		padding 0 20px
		+bp(medium)
			padding 0 10%
	+bp(medium)
		display flex
		align-self center
		text-align left
		.content-side
			padding 0 9%
			&.xs
				padding 0 2%
			p
				color #656b6f
			+bp(medium)
				align-self center